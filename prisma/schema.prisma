// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  // Yanki specific fields
  credits       Int       @default(1000) // Free trial: 1000 characters
  plan          String    @default("free") // free, baslangic, icerik, profesyonel, kurumsal
  subscriptionExpires DateTime? @map("subscription_expires")
  voiceCloningLimit Int   @default(0) @map("voice_cloning_limit") // Free: 0, baslangic: 5, icerik: 10, profesyonel: 20, kurumsal: 50
  characterLimit Int      @default(1000) @map("character_limit") // Free: 1000, baslangic: 100000, icerik: 300000, profesyonel: 750000, kurumsal: 3000000
  usedCharacters Int      @default(0) @map("used_characters") // Used characters this month
  resetDate     DateTime  @default(now()) @map("reset_date") // When to reset used_characters
  isYearly      Boolean   @default(false) @map("is_yearly") // Yearly subscription flag with 15% discount
  
  accounts      Account[]
  sessions      Session[]
  history       History[]
  clonedVoices  ClonedVoice[]
  favorites     Favorite[]
  subscriptions Subscription[]
  usageRecords  UsageRecord[]
  paymentRecords PaymentRecord[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model History {
  id             String   @id @default(cuid())
  userId         String   @map("user_id")
  text           String   @db.Text
  audioUrl       String   @map("audio_url")
  voiceId        String   @map("voice_id")
  characterCount Int      @map("character_count")
  emotion        String   @default("happy")
  language       String   @default("Turkish")
  status         String   @default("completed")
  createdAt      DateTime @default(now()) @map("created_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
  @@map("history")
}

model ClonedVoice {
  id               String   @id @default(cuid())
  userId           String   @map("user_id")
  voiceId          String   @map("voice_id") // Minimax API'den dönen voice ID
  name             String
  description      String?
  accuracy         Float    @default(0.7) // 0.1-0.9 arası accuracy değeri
  originalFileName String   @map("original_file_name")
  fileSize         Int      @map("file_size")
  status           String   @default("processing") // processing, completed, failed
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([voiceId])
  @@index([status])
  @@map("cloned_voices")
}

model Subscription {
  id              String   @id @default(cuid())
  userId          String   @map("user_id")
  planType        String   @map("plan_type") // free, baslangic, icerik, profesyonel, kurumsal
  characterLimit  Int      @map("character_limit") // baslangic: 100000, icerik: 300000, profesyonel: 750000, kurumsal: 3000000
  voiceCloneLimit Int      @map("voice_clone_limit") // baslangic: 5, icerik: 10, profesyonel: 20, kurumsal: 50
  isYearly        Boolean  @default(false) @map("is_yearly") // Yearly subscription with 15% discount
  amount          Float    // Paid amount in TL - baslangic: 89₺, icerik: 199₺, profesyonel: 399₺, kurumsal: 2999₺
  currency        String   @default("TL")
  status          String   @default("active") // active, cancelled, expired
  startDate       DateTime @map("start_date")
  endDate         DateTime @map("end_date")
  cancelAtPeriodEnd Boolean @default(false) @map("cancel_at_period_end")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  usageRecords UsageRecord[]
  
  @@index([userId])
  @@index([status])
  @@index([endDate])
  @@map("subscriptions")
}

model UsageRecord {
  id             String   @id @default(cuid())
  userId         String   @map("user_id")
  subscriptionId String?  @map("subscription_id")
  serviceType    String   @map("service_type") // tts, voice_cloning, transcribe
  charactersUsed Int      @default(0) @map("characters_used") // For TTS
  minutesUsed    Float    @default(0) @map("minutes_used") // For transcribe
  voicesCloned   Int      @default(0) @map("voices_cloned") // For voice cloning
  cost           Float    @default(0) // Cost in TL
  month          Int      // 1-12
  year           Int      // 2024, 2025, etc
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription Subscription? @relation(fields: [subscriptionId], references: [id])
  
  @@index([userId])
  @@index([month, year])
  @@index([serviceType])
  @@unique([userId, month, year, serviceType])
  @@map("usage_records")
}

model PaymentRecord {
  id             String   @id @default(cuid())
  userId         String   @map("user_id")
  subscriptionId String?  @map("subscription_id")
  paymentType    String   @map("payment_type") // subscription, credits, transcribe
  amount         Float    // Amount in TL
  currency       String   @default("TL")
  paymentMethod  String   @map("payment_method") // credit_card, bank_transfer, etc
  status         String   @default("pending") // pending, completed, failed, refunded
  paymentProvider String? @map("payment_provider") // stripe, paytr, etc
  providerTransactionId String? @map("provider_transaction_id")
  description    String?
  metadata       Json?    // Additional payment metadata
  paidAt         DateTime? @map("paid_at")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
  @@index([paymentType])
  @@index([paidAt])
  @@map("payment_records")
}

model Favorite {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  voiceId     String   @map("voice_id") // "1", "2", "3", "4"
  voiceName   String   @map("voice_name") // "Mert - Belgesel", "Emel - Masalcı", etc.
  createdAt   DateTime @default(now()) @map("created_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, voiceId]) // Bir kullanıcı bir sesi sadece bir kez favorilere ekleyebilir
  @@index([userId])
  @@map("favorites")
}

model PaymentNotification {
  id           String   @id @default(cuid())
  customerName String   @map("customer_name")
  email        String
  plan         String   // baslangic, icerik, profesyonel, kurumsal
  amount       Float    // Payment amount in TL
  currency     String   @default("TL")
  status       String   @default("pending") // pending, approved, rejected
  adminNotes   String?  @map("admin_notes") @db.Text
  approvedAt   DateTime? @map("approved_at")
  rejectedAt   DateTime? @map("rejected_at")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  
  @@index([status])
  @@index([createdAt])
  @@index([email])
  @@map("payment_notifications")
}
